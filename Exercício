#include <stdio.h>

void imprimirOpcoes() {
    printf("Escolha uma opção de pagamento:\n");
    printf("1) A vista com 10%% de desconto\n");
    printf("2) Em duas vezes (preco da etiqueta)\n");
    printf("3) De 3 ate 10 vezes com 3%% de juros ao mes (acima de R$ 100,00)\n");
}

float calcularDescontoAVista(float total) {
    return total * 0.9;
}

float calcularParcelas(float total, int parcelas) {
    if (total > 100) {
        float juros = 0.03;
        float valorPrestacao = total / parcelas * (1 + juros);
        return valorPrestacao;
    } else {
        return total / parcelas;
    }
}

int main() {
    float total;
    int opcao;

    printf("Digite o total gasto pelo cliente: ");
    scanf("%f", &total);

    imprimirOpcoes();
    printf("Escolha a opcao desejada (1/2/3): ");
    scanf("%d", &opcao);

    switch (opcao) {
        case 1:
            total = calcularDescontoAVista(total);
            printf("O valor com desconto a vista e: R$ %.2f\n", total);
            break;
        case 2:
            printf("O valor em duas vezes e: R$ %.2f\n", total);
            break;
        case 3:
            int parcelas;
            printf("Digite o numero de parcelas (3 a 10): ");
            scanf("%d", &parcelas);
            if (parcelas >= 3 && parcelas <= 10) {
                float valorPrestacao = calcularParcelas(total, parcelas);
                printf("O valor de cada prestacao e: R$ %.2f\n", valorPrestacao);
            } else {
                printf("Numero de parcelas invalido.\n");
            }
            break;
        default:
            printf("Opcao invalida.\n");
            break;
    }

    return 0;
}
